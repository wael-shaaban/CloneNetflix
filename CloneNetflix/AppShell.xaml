<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CloneNetflix.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CloneNetflix"
    xmlns:Pages="clr-namespace:CloneNetflix.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="{DynamicResource White}"
    Shell.TabBarUnselectedColor="{DynamicResource Gray500}"
    Title="CloneNetflix">
    <TabBar>
    <ShellContent
        Title="Home"
        Icon="hometab"
        ContentTemplate="{DataTemplate Pages:MainPage}"
        Route="MainPage" />
            <ShellContent
        Title="Games"
        Icon="game"
        ContentTemplate="{DataTemplate Pages:MainPage}"
        Route="MainPage1" />
            <ShellContent
        Title="New &amp; Hot"
        Icon="brand_netflix"
        ContentTemplate="{DataTemplate Pages:MainPage}"
        Route="MainPage2" />
            <ShellContent
        Title="Downloads"
        Icon="download"
        ContentTemplate="{DataTemplate Pages:MainPage}"
        Route="MainPage2" />
        
</TabBar>
</Shell>
